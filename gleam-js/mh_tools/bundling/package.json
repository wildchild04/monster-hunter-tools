{
  "name": "bundling",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:js": "esbuild ../entry.js --bundle --format=esm --outfile=../../../assets/mh-tools.js",
    "build:css": "node ./build-css.mjs",
    "build": "npm run build:js && npm run build:css",
    "watch:js": "esbuild ../entry.js --bundle --format=esm --outfile=../../../assets/mh-tools.js --watch",
    "watch:css": "node --watch ./build-css.mjs",
    "watch:gleam": "chokidar '../src/**/*.gleam' -c 'cd .. && gleam build'",
    "watch": "npm-run-all --parallel watch:js watch:css watch:gleam"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.25.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.12"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "descrption": ""
}
